<ContentDialog
    x:Class="RestoLAddition.DialogEditResto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestoLAddition"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ajouter une note"
    PrimaryButtonText="valider"  
    SecondaryButtonText="annuler"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick" Background="{StaticResource BackgroundBlueGradient3}" Loaded="ContentDialog_Loaded">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TextBox x:Name="RestaurantName" Header="Nom du restaurant" PlaceholderText="saisir le nom du restaurant"/>

        <!-- Content body -->
        <TextBlock x:Name="body" Style="{StaticResource MessageDialogContentStyle}" TextWrapping="Wrap">
            <TextBlock.Text>
                Ajoutez ici la liste des participants.
            </TextBlock.Text>
        </TextBlock>

        <TextBox x:Name="Guest1" Header="Convive n°1"/>
        <TextBox x:Name="Guest2" Header="Convive n°2"/>
        <TextBox x:Name="Guest3" Header="Convive n°3"/>
        <TextBox x:Name="Guest4" Header="Convive n°4"/>
        <TextBox x:Name="Guest5" Header="Convive n°5"/>

    </StackPanel>
</ContentDialog>
